local function updateButtonPositions()
	local baseY = 50
	if dropdownOpen then
		baseY = 210
	end

	local tweenInfo = TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)

	tweenService:Create(viewButton, tweenInfo, {Position = UDim2.new(0,10,0,baseY)}):Play()
	tweenService:Create(gotoButton, tweenInfo, {Position = UDim2.new(0,10,0,baseY + 40)}):Play()
	tweenService:Create(copyOutfitButton, tweenInfo, {Position = UDim2.new(0,10,0,baseY + 80)}):Play()

	playerScroll.CanvasSize = UDim2.new(0,0,0,math.max(baseY + 120, 450))
end

function updatePlayerList(searchQuery)
	searchQuery = searchQuery or ""
	searchQuery = searchQuery:lower()

	for _, child in pairs(playerListFrame:GetChildren()) do
		if child:IsA("TextButton") and child ~= searchBox then
			child:Destroy()
		end
	end

	local yPos = 35
	local players = game.Players:GetPlayers()
	local matchingPlayers = {}

	for _, targetPlayer in pairs(players) do
		if targetPlayer ~= player then
			local playerName = targetPlayer.Name:lower()
			if searchQuery == "" or playerName:find(searchQuery, 1, true) then
				table.insert(matchingPlayers, targetPlayer)
			end
		end
	end

	for _, targetPlayer in pairs(matchingPlayers) do
		local playerBtn = Instance.new("TextButton")
		playerBtn.Size = UDim2.new(1,-10,0,30)
		playerBtn.Position = UDim2.new(0,5,0,yPos)
		playerBtn.BackgroundColor3 = primaryMedium
		playerBtn.TextColor3 = textColor
		playerBtn.Text = targetPlayer.Name
		playerBtn.Font = Enum.Font.Gotham
		playerBtn.TextSize = 12
		playerBtn.Parent = playerListFrame
		Instance.new("UICorner", playerBtn).CornerRadius = UDim.new(0,4)

		playerBtn.MouseButton1Click:Connect(function()
			selectedPlayer = targetPlayer
			playerSelectButton.Text = targetPlayer.Name
			playerListFrame.Visible = false
			dropdownOpen = false
			updateButtonPositions()
		end)

		yPos = yPos + 35
	end

	playerListFrame.CanvasSize = UDim2.new(0,0,0,yPos + 5)
	updateButtonPositions()
end

playerSelectButton.MouseButton1Click:Connect(function()
	dropdownOpen = not dropdownOpen
	playerListFrame.Visible = dropdownOpen
	if dropdownOpen then
		searchBox.Text = ""
		updatePlayerList("")
	else
		updateButtonPositions()
	end
end)

searchBox:GetPropertyChangedSignal("Text"):Connect(function()
	updatePlayerList(searchBox.Text)
end)

-- ====== COMPLETELY FIXED COPY OUTFIT FUNCTIONALITY ======
local function copyPlayerOutfit(targetPlayer)
	if not targetPlayer or not targetPlayer.Character then 
		return false, "Target player or character not found"
	end

	if not player.Character then 
		return false, "Your character not found"
	end

	print("[OUTFIT] Starting complete outfit copy from " .. targetPlayer.Name)

	local targetCharacter = targetPlayer.Character
	local myCharacter = player.Character
	local targetUserId = targetPlayer.UserId

	-- SCHRITT 1: SOFORTIGES ENTFERNEN - Alle meine aktuellen Items löschen
	print("[OUTFIT] Removing all current items...")
	for _, item in pairs(myCharacter:GetChildren()) do
		if item:IsA("Accessory") or item:IsA("Hat") or item:IsA("Shirt") or item:IsA("Pants") or item:IsA("ShirtGraphic") then
			item:Destroy()
		end
	end

	-- SCHRITT 2: HUMANOID DESCRIPTION - Körperproportionen kopieren
	print("[OUTFIT] Applying HumanoidDescription...")
	spawn(function()
		local success, targetDescription = pcall(function()
			return game.Players:GetHumanoidDescriptionFromUserId(targetUserId)
		end)
		
		if success and targetDescription then
			local myHumanoid = myCharacter:FindFirstChild("Humanoid")
			if myHumanoid then
				-- Alle wichtigen Properties übertragen
				pcall(function()
					targetDescription.HatAccessory = targetDescription.HatAccessory or ""
					targetDescription.HairAccessory = targetDescription.HairAccessory or ""
					targetDescription.FaceAccessory = targetDescription.FaceAccessory or ""
					targetDescription.NeckAccessory = targetDescription.NeckAccessory or ""
					targetDescription.ShoulderAccessory = targetDescription.ShoulderAccessory or ""
					targetDescription.FrontAccessory = targetDescription.FrontAccessory or ""
					targetDescription.BackAccessory = targetDescription.BackAccessory or ""
					targetDescription.WaistAccessory = targetDescription.WaistAccessory or ""
					
					myHumanoid:ApplyDescription(targetDescription)
				end)
				print("[OUTFIT] HumanoidDescription applied successfully")
			end
		else
			print("[OUTFIT] Failed to get HumanoidDescription, using manual copy")
		end
	end)

	-- SCHRITT 3: WARTEN UND MANUELLE KOPIE
	wait(0.5)

	-- SCHRITT 4: ACCESSORIES MANUELL KOPIEREN
	print("[OUTFIT] Copying accessories manually...")
	for _, targetAccessory in pairs(targetCharacter:GetChildren()) do
		if targetAccessory:IsA("Accessory") or targetAccessory:IsA("Hat") then
			local clonedAccessory = targetAccessory:Clone()
			
			-- Stelle sicher dass das Handle existiert
			if clonedAccessory:FindFirstChild("Handle") then
				clonedAccessory.Parent = myCharacter
				print("[OUTFIT] Copied accessory: " .. targetAccessory.Name)
			else
				print("[OUTFIT] Skipped accessory without handle: " .. targetAccessory.Name)
			end
		end
	end

	-- SCHRITT 5: KLEIDUNG MANUELL KOPIEREN
	print("[OUTFIT] Copying clothing...")
	for _, targetClothing in pairs(targetCharacter:GetChildren()) do
		if targetClothing:IsA("Shirt") then
			local newShirt = Instance.new("Shirt")
			newShirt.Name = targetClothing.Name
			newShirt.ShirtTemplate = targetClothing.ShirtTemplate
			newShirt.Parent = myCharacter
			print("[OUTFIT] Copied shirt: " .. targetClothing.ShirtTemplate)
			
		elseif targetClothing:IsA("Pants") then
			local newPants = Instance.new("Pants")
			newPants.Name = targetClothing.Name
			newPants.PantsTemplate = targetClothing.PantsTemplate
			newPants.Parent = myCharacter
			print("[OUTFIT] Copied pants: " .. targetClothing.PantsTemplate)
			
		elseif targetClothing:IsA("ShirtGraphic") then
			local newTShirt = Instance.new("ShirtGraphic")
			newTShirt.Name = targetClothing.Name
			newTShirt.Graphic = targetClothing.Graphic
			newTShirt.Parent = myCharacter
			print("[OUTFIT] Copied t-shirt: " .. targetClothing.Graphic)
		end
	end

	-- SCHRITT 6: KÖRPERFARBEN KOPIEREN
	print("[OUTFIT] Copying body colors...")
	local targetBodyColors = targetCharacter:FindFirstChild("Body Colors")
	if targetBodyColors then
		-- Entferne alte Body Colors
		local oldBodyColors = myCharacter:FindFirstChild("Body Colors")
		if oldBodyColors then oldBodyColors:Destroy() end
		
		-- Erstelle neue Body Colors
		local newBodyColors = Instance.new("BodyColors")
		newBodyColors.HeadColor = targetBodyColors.HeadColor
		newBodyColors.LeftArmColor = targetBodyColors.LeftArmColor
		newBodyColors.LeftLegColor = targetBodyColors.LeftLegColor
		newBodyColors.RightArmColor = targetBodyColors.RightArmColor
		newBodyColors.RightLegColor = targetBodyColors.RightLegColor
		newBodyColors.TorsoColor = targetBodyColors.TorsoColor
		newBodyColors.Parent = myCharacter
		print("[OUTFIT] Body colors applied")
	end

	-- SCHRITT 7: KÖRPERTEILE KOPIEREN (Meshes, Decals etc.)
	print("[OUTFIT] Copying body part details...")
	for _, targetPart in pairs(targetCharacter:GetChildren()) do
		if targetPart:IsA("BasePart") and targetPart.Name ~= "HumanoidRootPart" then
			local myPart = myCharacter:FindFirstChild(targetPart.Name)
			if myPart and myPart:IsA("BasePart") then
				
				-- Kopiere Material Properties
				pcall(function()
					myPart.Material = targetPart.Material
					myPart.BrickColor = targetPart.BrickColor
					myPart.Color = targetPart.Color
				end)
				
				-- Kopiere Meshes
				for _, targetChild in pairs(targetPart:GetChildren()) do
					if targetChild:IsA("SpecialMesh") or targetChild:IsA("BlockMesh") or targetChild:IsA("CylinderMesh") then
						-- Entferne alte Meshes
						for _, oldMesh in pairs(myPart:GetChildren()) do
							if oldMesh:IsA("SpecialMesh") or oldMesh:IsA("BlockMesh") or oldMesh:IsA("CylinderMesh") then
								oldMesh:Destroy()
							end
						end
						
						-- Füge neues Mesh hinzu
						local newMesh = targetChild:Clone()
						newMesh.Parent = myPart
					elseif targetChild:IsA("Decal") or targetChild:IsA("Texture") then
						-- Entferne alte Decals
						for _, oldDecal in pairs(myPart:GetChildren()) do
							if oldDecal:IsA("Decal") or oldDecal:IsA("Texture") then
								oldDecal:Destroy()
							end
						end
						
						-- Füge neue Decals hinzu
						local newDecal = targetChild:Clone()
						newDecal.Parent = myPart
					end
				end
			end
		end
	end

	-- SCHRITT 8: FINALE ÜBERPRÜFUNG NACH 2 SEKUNDEN
	spawn(function()
		wait(2)
		print("[OUTFIT] Final verification...")
		
		-- Nochmal alle Accessories checken
		for _, targetAccessory in pairs(targetCharacter:GetChildren()) do
			if targetAccessory:IsA("Accessory") then
				local found = false
				for _, myAccessory in pairs(myCharacter:GetChildren()) do
					if myAccessory:IsA("Accessory") and myAccessory.Name == targetAccessory.Name then
						found = true
						break
					end
				end
				
				if not found and targetAccessory:FindFirstChild("Handle") then
					local clonedAccessory = targetAccessory:Clone()
					clonedAccessory.Parent = myCharacter
					print("[OUTFIT] Added missing accessory in verification: " .. targetAccessory.Name)
				end
			end
		end
		
		-- Nochmal Kleidung checken
		if targetCharacter:FindFirstChild("Shirt") and not myCharacter:FindFirstChild("Shirt") then
			local targetShirt = targetCharacter:FindFirstChild("Shirt")
			local newShirt = Instance.new("Shirt")
			newShirt.ShirtTemplate = targetShirt.ShirtTemplate
			newShirt.Parent = myCharacter
			print("[OUTFIT] Added missing shirt in verification")
		end
		
		if targetCharacter:FindFirstChild("Pants") and not myCharacter:FindFirstChild("Pants") then
			local targetPants = targetCharacter:FindFirstChild("Pants")
			local newPants = Instance.new("Pants")
			newPants.PantsTemplate = targetPants.PantsTemplate
			newPants.Parent = myCharacter
			print("[OUTFIT] Added missing pants in verification")
		end
		
		print("[OUTFIT] Complete outfit transformation finished!")
	end)

	return true, "Complete outfit transformation in progress"
end

-- ====== VIEW FUNCTIONALITY ======
local function stopViewing()
	if cameraConnection then
		cameraConnection:Disconnect()
		cameraConnection = nil
	end
	if originalCamera then
		workspace.CurrentCamera.CameraSubject = player.Character and player.Character:FindFirstChild("Humanoid")
		workspace.CurrentCamera.CameraType = Enum.CameraType.Custom
	end
	viewingPlayer = false
	viewButton.Text = "View: Off"
	viewButton.BackgroundColor3 = primaryMedium
end

local function startViewing(targetPlayer)
	if not targetPlayer or not targetPlayer.Character then return end

	if not originalCamera then
		originalCamera = workspace.CurrentCamera
	end

	local targetHumanoid = targetPlayer.Character:FindFirstChild("Humanoid")
	if targetHumanoid then
		workspace.CurrentCamera.CameraSubject = targetHumanoid
		workspace.CurrentCamera.CameraType = Enum.CameraType.Custom

		cameraConnection = targetPlayer.CharacterRemoving:Connect(function()
			stopViewing()
		end)

		viewingPlayer = true
		viewButton.Text = "View: On"
		viewButton.BackgroundColor3 = secondary
	end
end

viewButton.MouseButton1Click:Connect(function()
	if not selectedPlayer then
		playerSelectButton.Text = "Please select a player first!"
		wait(2)
		playerSelectButton.Text = "Select Player"
		return
	end

	if viewingPlayer then
		stopViewing()
	else
		startViewing(selectedPlayer)
	end
end)

gotoButton.MouseButton1Click:Connect(function()
	if not selectedPlayer then
		playerSelectButton.Text = "Please select a player first!"
		wait(2)
		playerSelectButton.Text = "Select Player"
		return
	end

	if not selectedPlayer.Character or not selectedPlayer.Character:FindFirstChild("HumanoidRootPart") then
		playerSelectButton.Text = "Player not found!"
		wait(2)
		playerSelectButton.Text = selectedPlayer.Name
		return
	end

	if not player.Character or not player.Character:FindFirstChild("HumanoidRootPart") then
		return
	end

	local targetPosition = selectedPlayer.Character.HumanoidRootPart.Position
	player.Character.HumanoidRootPart.CFrame = CFrame.new(targetPosition + Vector3.new(0, 0, 3))
end)

-- ====== COPY OUTFIT BUTTON FUNCTIONALITY ======
copyOutfitButton.MouseButton1Click:Connect(function()
	if not selectedPlayer then
		playerSelectButton.Text = "Please select a player first!"
		wait(2)
		playerSelectButton.Text = "Select Player"
		return
	end

	if not selectedPlayer.Character then
		copyOutfitButton.Text = "Player not loaded!"
		wait(2)
		copyOutfitButton.Text = "Copy Outfit"
		return
	end

	copyOutfitButton.Text = "Copying..."
	copyOutfitButton.BackgroundColor3 = secondary

	local success, message = copyPlayerOutfit(selectedPlayer)

	if success then
		copyOutfitButton.Text = "Successfully Copied!"
		copyOutfitButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
		print("[SUCCESS] " .. message)
		wait(2)
		copyOutfitButton.Text = "Copy Outfit"
		copyOutfitButton.BackgroundColor3 = primaryMedium
	else
		copyOutfitButton.Text = "Copy Failed!"
		copyOutfitButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
		print("[ERROR] " .. message)
		wait(2)
		copyOutfitButton.Text = "Copy Outfit"
		copyOutfitButton.BackgroundColor3 = primaryMedium
	end
end)

-- ====== PLAYER EVENTS ======
game.Players.PlayerAdded:Connect(function()
	if dropdownOpen then
		updatePlayerList(searchBox.Text)
	end
end)

game.Players.PlayerRemoving:Connect(function(leavingPlayer)
	if selectedPlayer == leavingPlayer then
		if viewingPlayer then
			stopViewing()
		end
		selectedPlayer = nil
		playerSelectButton.Text = "Select Player"
	end

	if dropdownOpen then
		updatePlayerList(searchBox.Text)
	end
end)

player.CharacterAdded:Connect(function()
	if viewingPlayer then
		stopViewing()
	end
	character = player.Character
	hrp = character:WaitForChild("HumanoidRootPart")
	humanoid = character:WaitForChild("Humanoid")
end)

