-- ESP Highlight Funktion - Neu geschrieben
local function createESPHighlight(character)
    if not character or not character.Parent then 
        print("ESP: Character ung√ºltig")
        return nil 
    end
    
    -- Entferne bereits vorhandene ESP Highlights
    for _, child in pairs(character:GetChildren()) do
        if child.Name == "VyrxisESP" then
            child:Destroy()
        end
    end
    
    local highlight = Instance.new("Highlight")
    highlight.Name = "VyrxisESP"
    highlight.FillColor = espColor
    highlight.OutlineColor = espColor
    highlight.FillTransparency = espTransparency / 100
    highlight.OutlineTransparency = 0
    highlight.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
    highlight.Parent = character
    
    print("‚úÖ ESP Highlight erstellt f√ºr: " .. character.Name)
    return highlight
end

-- Nametag Funktion - Neu geschrieben
local function createNametag(character, playerName)
    if not character or not character.Parent then return nil end
    
    local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
    if not humanoidRootPart then return nil end
    
    -- Entferne alte Nametags
    for _, child in pairs(humanoidRootPart:GetChildren()) do
        if child.Name == "VyrxisNametag" then
            child:Destroy()
        end
    end
    
    local billboardGui = Instance.new("BillboardGui")
    billboardGui.Name = "VyrxisNametag"
    billboardGui.Size = UDim2.new(0, 200, 0, 50)
    billboardGui.StudsOffset = Vector3.new(0, -4, 0)
    billboardGui.Parent = humanoidRootPart
    billboardGui.AlwaysOnTop = true
    billboardGui.LightInfluence = 0
    
    local textLabel = Instance.new("TextLabel")
    textLabel.Size = UDim2.new(1, 0, 1, 0)
    textLabel.BackgroundTransparency = 1
    textLabel.Text = playerName
    textLabel.TextColor3 = nametagColor
    textLabel.TextSize = nametagSize
    textLabel.Font = Enum.Font.GothamBold
    textLabel.TextStrokeTransparency = 0
    textLabel.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
    textLabel.Parent = billboardGui
    
    print("‚úÖ Nametag erstellt f√ºr: " .. playerName)
    return billboardGui
end

-- Healthbar Funktion - Perfekt positioniert
local function createHealthbar(character)
    if not character or not character.Parent then return nil end
    
    local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
    local humanoid = character:FindFirstChild("Humanoid")
    if not humanoidRootPart or not humanoid then return nil end
    
    -- Entferne alte Healthbars
    for _, child in pairs(humanoidRootPart:GetChildren()) do
        if child.Name == "VyrxisHealthbar" then
            child:Destroy()
        end
    end
    
    -- Character-Gr√∂√üe berechnen f√ºr relative Positionierung
    local characterHeight = 5 -- Standard Roblox Character H√∂he
    if character:FindFirstChild("Head") and character:FindFirstChild("HumanoidRootPart") then
        local head = character.Head
        local rootPart = character.HumanoidRootPart
        characterHeight = math.abs(head.Position.Y - rootPart.Position.Y) + head.Size.Y/2 + rootPart.Size.Y/2
    end
    
    local billboardGui = Instance.new("BillboardGui")
    billboardGui.Name = "VyrxisHealthbar"
    -- Gr√∂√üe relativ zum Character - maximal so hoch wie der Character
    billboardGui.Size = UDim2.new(0, 0, characterHeight * 0.8, 0) -- 80% der Character-H√∂he
    billboardGui.StudsOffset = Vector3.new(2.5, characterHeight * 0.1, 0) -- Rechts vom Character, leicht nach oben versetzt
    billboardGui.Parent = humanoidRootPart
    billboardGui.AlwaysOnTop = true
    billboardGui.LightInfluence = 0
    -- WICHTIG: Verhindert Gr√∂√üen√§nderung in der Entfernung
    billboardGui.StudsOffsetWorldSpace = false
    billboardGui.SizeOffset = Vector2.new(0, 0)
    
    -- Background Frame f√ºr die Healthbar
    local background = Instance.new("Frame")
    background.Size = UDim2.new(0, 4, 1, 0) -- D√ºnne Healthbar (4 Pixel breit)
    background.Position = UDim2.new(0, 0, 0, 0)
    background.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    background.BorderSizePixel = 1
    background.BorderColor3 = Color3.fromRGB(200, 200, 200)
    background.Parent = billboardGui
    
    -- Actual Health Bar
    local currentHealth = math.max(humanoid.Health / humanoid.MaxHealth, 0.01)
    local healthBar = Instance.new("Frame")
    healthBar.Size = UDim2.new(1, -2, currentHealth, -2)
    healthBar.Position = UDim2.new(0, 1, 1, -1)
    healthBar.AnchorPoint = Vector2.new(0, 1)
    healthBar.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
    healthBar.BorderSizePixel = 0
    healthBar.Parent = background
    
    -- Health update connection
    local connection
    connection = humanoid.HealthChanged:Connect(function()
        if healthBar and healthBar.Parent then
            local healthPercent = math.max(humanoid.Health / humanoid.MaxHealth, 0.01)
            healthBar.Size = UDim2.new(1, -2, healthPercent, -2)
            
            -- Farbe basierend auf Gesundheit
            if healthPercent > 0.6 then
                healthBar.BackgroundColor3 = Color3.fromRGB(0, 255, 0) -- Gr√ºn
            elseif healthPercent > 0.3 then
                healthBar.BackgroundColor3 = Color3.fromRGB(255, 255, 0) -- Gelb
            else
                healthBar.BackgroundColor3 = Color3.fromRGB(255, 0, 0) -- Rot
            end
        end
    end)
    
    -- Cleanup when character is removed
    character.AncestryChanged:Connect(function()
        if not character.Parent and connection then
            connection:Disconnect()
        end
    end)
    
    print("‚úÖ Healthbar erstellt f√ºr: " .. character.Name)
    return billboardGui
end

-- ESP System - FINAL VERSION - Jeder Spieler bekommt ESP + Healthbar
local espHighlights = {}
local healthbars = {}

-- ESP Highlight erstellen - GARANTIERT funktionierend
local function createESPHighlight(character)
    if not character or not character.Parent then 
        print("‚ùå Character ung√ºltig f√ºr Highlight")
        return nil 
    end
    
    -- Entferne alte Highlights
    for _, child in pairs(character:GetChildren()) do
        if child:IsA("Highlight") and child.Name == "VyrxisESP" then
            child:Destroy()
        end
    end
    
    local highlight = Instance.new("Highlight")
    highlight.Name = "VyrxisESP"
    highlight.FillColor = espColor
    highlight.OutlineColor = espColor
    highlight.FillTransparency = espTransparency / 100
    highlight.OutlineTransparency = 0
    highlight.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
    highlight.Parent = character
    
    print("‚úÖ ESP Highlight erstellt f√ºr: " .. character.Name)
    return highlight
end

-- Healthbar erstellen - FEHLER BEHOBEN
local function createHealthbar(character)
    if not character or not character.Parent then 
        print("‚ùå Character ung√ºltig f√ºr Healthbar")
        return nil 
    end
    
    local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
    local humanoid = character:FindFirstChild("Humanoid")
    if not humanoidRootPart or not humanoid then 
        print("‚ùå HumanoidRootPart oder Humanoid fehlt f√ºr: " .. character.Name)
        return nil 
    end
    
    -- Entferne alte Healthbars
    for _, child in pairs(humanoidRootPart:GetChildren()) do
        if child:IsA("BillboardGui") and child.Name == "VyrxisHealthbar" then
            child:Destroy()
            print("üóëÔ∏è Alte Healthbar entfernt f√ºr: " .. character.Name)
        end
    end
    
    -- Erstelle BillboardGui f√ºr Healthbar
    local billboardGui = Instance.new("BillboardGui")
    billboardGui.Name = "VyrxisHealthbar"
    billboardGui.Size = UDim2.new(0, 10, 0, 100) -- 10 Pixel breit, 100 Pixel hoch - SEHR GUT SICHTBAR
    billboardGui.StudsOffset = Vector3.new(3, 0, 0) -- 3 Studs rechts vom Character
    billboardGui.Parent = humanoidRootPart
    billboardGui.AlwaysOnTop = true
    billboardGui.LightInfluence = 0
    -- FEHLER BEHOBEN: StudsOffsetWorldSpace muss boolean sein
    billboardGui.StudsOffsetWorldSpace = false
    
    -- Hintergrund Frame - GUT SICHTBAR
    local background = Instance.new("Frame")
    background.Size = UDim2.new(1, 0, 1, 0)
    background.BackgroundColor3 = Color3.fromRGB(40, 40, 40) -- Dunkler Hintergrund
    background.BorderSizePixel = 2
    background.BorderColor3 = Color3.fromRGB(255, 255, 255) -- Wei√üer Rahmen
    background.Parent = billboardGui
    
    -- Gesundheitsbalken - IMMER SICHTBAR
    local currentHealthPercent = math.max(humanoid.Health / humanoid.MaxHealth, 0.05) -- Minimum 5%
    local healthBar = Instance.new("Frame")
    healthBar.Size = UDim2.new(1, -4, currentHealthPercent, -4)
    healthBar.Position = UDim2.new(0, 2, 1, -2)
    healthBar.AnchorPoint = Vector2.new(0, 1)
    healthBar.BackgroundColor3 = Color3.fromRGB(0, 255, 0) -- Helles Gr√ºn
    healthBar.BorderSizePixel = 0
    healthBar.Parent = background
    
    -- Health Update Connection
    local healthConnection = humanoid.HealthChanged:Connect(function()
        if healthBar and healthBar.Parent then
            local healthPercent = math.max(humanoid.Health / humanoid.MaxHealth, 0.05)
            healthBar.Size = UDim2.new(1, -4, healthPercent, -4)
            
            -- Farbe basierend auf Gesundheit - LEUCHTENDE FARBEN
            if healthPercent > 0.6 then
                healthBar.BackgroundColor3 = Color3.fromRGB(0, 255, 0) -- Helles Gr√ºn
            elseif healthPercent > 0.3 then
                healthBar.BackgroundColor3 = Color3.fromRGB(255, 255, 0) -- Helles Gelb
            else
                healthBar.BackgroundColor3 = Color3.fromRGB(255, 0, 0) -- Helles Rot
            end
            
            print("üíä Health Update f√ºr " .. character.Name .. ": " .. math.floor(healthPercent * 100) .. "%")
        end
    end)
    
    -- Cleanup bei Character-Entfernung
    local ancestryConnection = character.AncestryChanged:Connect(function()
        if not character.Parent then
            if healthConnection then 
                healthConnection:Disconnect() 
                print("üóëÔ∏è Health Connection getrennt f√ºr: " .. character.Name)
            end
            if ancestryConnection then 
                ancestryConnection:Disconnect() 
            end
        end
    end)
    
    print("‚úÖ HEALTHBAR ERFOLGREICH ERSTELLT f√ºr: " .. character.Name .. " (HP: " .. math.floor(currentHealthPercent * 100) .. "%)")
    return billboardGui
end

-- ESP f√ºr einen Spieler aktivieren - ROBUST
local function enableESPForPlayer(player)
    if player == LocalPlayer then return end
    if not player.Character or not player.Character.Parent then 
        print("‚ö†Ô∏è Kein Character f√ºr: " .. player.Name)
        return 
    end
    
    print("üéØ ESP aktivieren f√ºr: " .. player.Name)
    
    -- Cleanup alte ESP Elemente
    if espHighlights[player] and espHighlights[player].Parent then
        espHighlights[player]:Destroy()
    end
    if healthbars[player] and healthbars[player].Parent then
        healthbars[player]:Destroy()
    end
    
    -- Erstelle Highlight
    local highlight = createESPHighlight(player.Character)
    if highlight then
        espHighlights[player] = highlight
        print("‚úÖ Highlight gespeichert f√ºr: " .. player.Name)
    else
        print("‚ùå Highlight FEHLER f√ºr: " .. player.Name)
    end
    
    -- Erstelle Healthbar
    local healthbar = createHealthbar(player.Character)
    if healthbar then
        healthbars[player] = healthbar
        print("‚úÖ Healthbar gespeichert f√ºr: " .. player.Name)
    else
        print("‚ùå Healthbar FEHLER f√ºr: " .. player.Name)
    end
end

-- ESP f√ºr alle Spieler aktivieren - JEDER SPIELER GARANTIERT
local function enableESPForAllPlayers()
    print("üî•üî•üî• ESP f√ºr ALLE Spieler aktivieren...")
    
    -- Zuerst alle alten ESP Elemente l√∂schen
    print("üóëÔ∏è Cleanup aller alten ESP Elemente...")
    for player, highlight in pairs(espHighlights) do
        if highlight and highlight.Parent then
            highlight:Destroy()
        end
    end
    for player, healthbar in pairs(healthbars) do
        if healthbar and healthbar.Parent then
            healthbar:Destroy()
        end
    end
    espHighlights = {}
    healthbars = {}
    
    local allPlayers = Players:GetPlayers()
    local totalPlayers = #allPlayers
    local otherPlayers = totalPlayers - 1 -- Minus LocalPlayer
    
    print("üìä SPIELER ANALYSE:")
    print("   Gesamt Spieler im Server: " .. totalPlayers)
    print("   Andere Spieler (au√üer mir): " .. otherPlayers)
    print("   LocalPlayer: " .. LocalPlayer.Name)
    
    local processed = 0
    local highlightsCreated = 0
    local healthbarsCreated = 0
    local waitingForCharacter = 0
    
    -- Durchlaufe JEDEN einzelnen Spieler
    for i, player in pairs(allPlayers) do
        if player ~= LocalPlayer then
            processed = processed + 1
            print("")
            print("üéÆ SPIELER " .. processed .. "/" .. otherPlayers .. ": " .. player.Name)
            print("   Player Display Name: " .. (player.DisplayName or "None"))
            print("   Player UserID: " .. player.UserId)
            
            if player.Character and player.Character.Parent then
                print("   ‚úÖ Character vorhanden: " .. player.Character.Name)
                
                -- HIGHLIGHT ERSTELLEN
                local highlight = createESPHighlight(player.Character)
                if highlight then
                    espHighlights[player] = highlight
                    highlightsCreated = highlightsCreated + 1
                    print("   üü° HIGHLIGHT ERSTELLT #" .. highlightsCreated)
                else
                    print("   ‚ùå HIGHLIGHT FEHLER!")
                end
                
                -- HEALTHBAR ERSTELLEN  
                local healthbar = createHealthbar(player.Character)
                if healthbar then
                    healthbars[player] = healthbar
                    healthbarsCreated = healthbarsCreated + 1
                    print("   üü¢ HEALTHBAR ERSTELLT #" .. healthbarsCreated)
                else
                    print("   ‚ùå HEALTHBAR FEHLER!")
                end
                
            else
                waitingForCharacter = waitingForCharacter + 1
                print("   ‚è≥ KEIN CHARACTER - Status:")
                print("     player.Character = " .. tostring(player.Character))
                if player.Character then
                    print("     player.Character.Parent = " .. tostring(player.Character.Parent))
                end
                
                -- Spawn Thread f√ºr wartende Spieler
                spawn(function()
                    local attempts = 0
                    local maxAttempts = 100 -- 20 Sekunden warten
                    
                    print("   üïê Starte Warten f√ºr: " .. player.Name)
                    
                    while (not player.Character or not player.Character.Parent) and attempts < maxAttempts and isESPEnabled do
                        wait(0.2)
                        attempts = attempts + 1
                        
                        -- Alle 25 Versuche (5 Sekunden) Status ausgeben
                        if attempts % 25 == 0 then
                            print("   ‚è∞ Warten seit " .. (attempts * 0.2) .. "s f√ºr: " .. player.Name)
                        end
                    end
                    
                    if player.Character and player.Character.Parent and isESPEnabled then
                        print("   üéâ CHARACTER GEFUNDEN f√ºr: " .. player.Name .. " nach " .. (attempts * 0.2) .. " Sekunden!")
                        
                        -- Highlight erstellen
                        local lateHighlight = createESPHighlight(player.Character)
                        if lateHighlight then
                            espHighlights[player] = lateHighlight
                            print("   üü° SP√ÑTES HIGHLIGHT ERSTELLT f√ºr: " .. player.Name)
                        end
                        
                        -- Healthbar erstellen
                        local lateHealthbar = createHealthbar(player.Character)
                        if lateHealthbar then
                            healthbars[player] = lateHealthbar
                            print("   üü¢ SP√ÑTE HEALTHBAR ERSTELLT f√ºr: " .. player.Name)
                        end
                        
                    elseif attempts >= maxAttempts then
                        print("   ‚è∞ TIMEOUT nach 20s f√ºr: " .. player.Name)
                    elseif not isESPEnabled then
                        print("   üö´ ESP wurde deaktiviert w√§hrend Warten")
                    end
                end)
            end
        else
            print("üôã Das bin ich (LocalPlayer): " .. player.Name)
        end
    end
    
    print("")
    print("üìä ESP AKTIVIERUNG ABGESCHLOSSEN:")
    print("   ‚úÖ Spieler verarbeitet: " .. processed .. "/" .. otherPlayers)
    print("   üü° Highlights sofort erstellt: " .. highlightsCreated)
    print("   üü¢ Healthbars sofort erstellt: " .. healthbarsCreated)
    print("   ‚è≥ Warten auf Character: " .. waitingForCharacter)
    print("")
    print("üîç AKTUELLE ESP ARRAYS:")
    print("   espHighlights Eintr√§ge: " .. #espHighlights)
    print("   healthbars Eintr√§ge: " .. #healthbars)
    
    -- Liste alle ESP Highlights auf
    for player, highlight in pairs(espHighlights) do
        print("   üìç ESP f√ºr: " .. player.Name .. " = " .. tostring(highlight))
    end
    
    -- Liste alle Healthbars auf
    for player, healthbar in pairs(healthbars) do
        print("   üíä Healthbar f√ºr: " .. player.Name .. " = " .. tostring(healthbar))
    end
end

-- ESP f√ºr alle deaktivieren
local function disableESPForAllPlayers()
    print("üö´ ESP deaktivieren...")
    
    local highlightsRemoved = 0
    local healthbarsRemoved = 0
    
    for player, highlight in pairs(espHighlights) do
        if highlight and highlight.Parent then
            highlight:Destroy()
            highlightsRemoved = highlightsRemoved + 1
        end
    end
    
    for player, healthbar in pairs(healthbars) do
        if healthbar and healthbar.Parent then
            healthbar:Destroy()
            healthbarsRemoved = healthbarsRemoved + 1
        end
    end
    
    espHighlights = {}
    healthbars = {}
    
    print("‚úÖ ESP deaktiviert:")
    print("   Highlights entfernt: " .. highlightsRemoved)
    print("   Healthbars entfernt: " .. healthbarsRemoved)
end

-- ESP Toggle Button
espHighlightButton.MouseButton1Click:Connect(function()
    isESPEnabled = not isESPEnabled
    espHighlightButton.Text = isESPEnabled and "ESP Highlight: ON" or "ESP Highlight: OFF"
    espHighlightButton.BackgroundColor3 = isESPEnabled and Color3.fromRGB(0, 150, 0) or Color3.fromRGB(60, 60, 65)
    
    print("üîÑ ESP Toggle: " .. tostring(isESPEnabled))
    
    if isESPEnabled then
        enableESPForAllPlayers()
    else
        disableESPForAllPlayers()
    end
end)

-- Player Events - Automatisches ESP f√ºr neue/respawnende Spieler
Players.PlayerAdded:Connect(function(player)
    if player == LocalPlayer then return end
    
    print("‚ûï Neuer Spieler: " .. player.Name)
    updatePlayerList()
    
    -- Character Added Event
    player.CharacterAdded:Connect(function(character)
        wait(1) -- Warte bis Character vollst√§ndig geladen
        print("üîÑ Character Respawn: " .. player.Name)
        
        if isESPEnabled then
            enableESPForPlayer(player)
        end
        
        if nametagsEnabled then
            local nametag = createNametag(character, player.Name)
            if nametag then nametags[player] = nametag end
        end
        
        updatePlayerList()
    end)
    
    -- Wenn bereits Character vorhanden
    if player.Character and isESPEnabled then
        wait(1)
        enableESPForPlayer(player)
    end
end)

Players.PlayerRemoving:Connect(function(player)
    print("‚ûñ Spieler verl√§sst: " .. player.Name)
    
    -- Cleanup ESP
    if espHighlights[player] then
        espHighlights[player]:Destroy()
        espHighlights[player] = nil
    end
    if healthbars[player] then
        healthbars[player]:Destroy()
        healthbars[player] = nil
    end
    if nametags[player] then
        nametags[player]:Destroy()
        nametags[player] = nil
    end
    
    updatePlayerList()
end)

-- Nametags Toggle
nametagsButton.MouseButton1Click:Connect(function()
    nametagsEnabled = not nametagsEnabled
    nametagsButton.Text = nametagsEnabled and "Nametags: ON" or "Nametags: OFF"
    nametagsButton.BackgroundColor3 = nametagsEnabled and Color3.fromRGB(0, 150, 0) or Color3.fromRGB(60, 60, 65)
    
    if nametagsEnabled then
        for _, player in pairs(Players:GetPlayers()) do
            if player ~= LocalPlayer and player.Character then
                local nametag = createNametag(player.Character, player.Name)
                nametags[player] = nametag
            end
        end
    else
        for player, nametag in pairs(nametags) do
            if nametag then
                nametag:Destroy()
            end
        end
        nametags = {}
    end
end)

-- ESP Transparency Update
RunService.Heartbeat:Connect(function()
    local newTransparency = espTransparencySlider() / 100
    if newTransparency ~= espTransparency then
        espTransparency = newTransparency
        for player, highlight in pairs(espHighlights) do
            if highlight then
                highlight.FillTransparency = espTransparency
            end
        end
    end
    
    local newNametagSize = nametagSizeSlider()
    if newNametagSize ~= nametagSize then
        nametagSize = newNametagSize
        for player, nametag in pairs(nametags) do
            if nametag and nametag:FindFirstChild("TextLabel") then
                nametag.TextLabel.TextSize = nametagSize
            end
        end
    end
end)

-- Player Events - Vereinfacht (ersetzt die alte Version)
-- (Die neuen Player Events sind bereits oben im ESP System enthalten)

-- GUI Controls
MinimizeButton.MouseButton1Click:Connect(function()
    MainFrame.Visible = not MainFrame.Visible
end)

SettingsButton.MouseButton1Click:Connect(function()
    SettingsFrame.Visible = true
end)

CloseSettings.MouseButton1Click:Connect(function()
    SettingsFrame.Visible = false
end)

-- Keybind Change
local changingKey = false
ChangeKeyButton.MouseButton1Click:Connect(function()
    if not changingKey then
        changingKey = true
        ChangeKeyButton.Text = "Press Key..."
        
        local connection
        connection = UserInputService.InputBegan:Connect(function(input, gameProcessed)
            if not gameProcessed and input.UserInputType == Enum.UserInputType.Keyboard then
                toggleKey = input.KeyCode
                KeybindLabel.Text = "Toggle Key: " .. toggleKey.Name
                ChangeKeyButton.Text = "Change Key"
                changingKey = false
                connection:Disconnect()
            end
        end)
    end
end)

-- Toggle Menu with Key
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == toggleKey then
        MainRahmen.Visible = not MainRahmen.Visible
        if MainRahmen.Visible then
            MainFrame.Visible = true
        end
    end
end)

-- Load Screen Animation und Startup
wait(0.1)

local function hideLoadScreen()
    -- Load Bar Animation
    local loadBarTween = TweenService:Create(LoadBar, TweenInfo.new(4, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Size = UDim2.new(1, 0, 1, 0)})
    loadBarTween:Play()
    
    -- Text Updates
    spawn(function()
        wait(1)
        LoadSubText.Text = "Loading components..."
        wait(1)
        LoadSubText.Text = "Initializing features..."
        wait(1)
        LoadSubText.Text = "Almost ready..."
        wait(1)
        LoadSubText.Text = "Ready!"
    end)
    
    wait(5) -- Total wait time
    
    local fadeOutTween = TweenService:Create(LoadScreen, TweenInfo.new(0.8, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {BackgroundTransparency = 1})
    local textFadeTween = TweenService:Create(LoadText, TweenInfo.new(0.8, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {TextTransparency = 1})
    local subTextFadeTween = TweenService:Create(LoadSubText, TweenInfo.new(0.8, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {TextTransparency = 1})
    local strokeFadeTween = TweenService:Create(LoadStroke, TweenInfo.new(0.8, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {Transparency = 1})
    local barBgFadeTween = TweenService:Create(LoadBarBackground, TweenInfo.new(0.8, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {BackgroundTransparency = 1})
    local barFadeTween = TweenService:Create(LoadBar, TweenInfo.new(0.8, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {BackgroundTransparency = 1})
    
    fadeOutTween:Play()
    textFadeTween:Play()
    subTextFadeTween:Play()
    strokeFadeTween:Play()
    barBgFadeTween:Play()
    barFadeTween:Play()
    
    -- Fade out bubbles
    for _, bubble in pairs(bubbles) do
        local bubbleFadeTween = TweenService:Create(bubble, TweenInfo.new(0.8, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {BackgroundTransparency = 1})
        bubbleFadeTween:Play()
    end
    
    fadeOutTween.Completed:Connect(function()
        LoadScreen:Destroy()
        for _, bubble in pairs(bubbles) do
            if bubble and bubble.Parent then
                bubble:Destroy()
            end
        end
        
        MainRahmen.Visible = true
        MainFrame.Visible = true
        
        local showTween = TweenService:Create(MainRahmen, TweenInfo.new(0.6, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Position = UDim2.new(0.5, -350, 0.3, -15)})
        showTween:Play()
    end)
end

-- Load Screen Timer
hideLoadScreen()

print("Vyrxis Menu loaded successfully!")
