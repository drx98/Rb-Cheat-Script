	espNametags = not espNametags
	if espNametags then
		nametagsButton.Text = "ESP Nametags: On"
		nametagsButton.BackgroundColor3 = secondary
	else
		nametagsButton.Text = "ESP Nametags: Off"
		nametagsButton.BackgroundColor3 = primaryMedium
	end
	updateAllESP()
end)

