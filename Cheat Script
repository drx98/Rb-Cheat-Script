-- Türkisfarbene Effekte für Load Screen
local function createLoadEffect(parent, size, position)
    local effect = Instance.new("Frame")
    effect.Size = size
    effect.Position = position
    effect.BackgroundColor3 = Color3.fromRGB(0, 255, 255)
    effect.BorderSizePixel = 0
    effect.BackgroundTransparency = 0.8
    effect.Parent = parent
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(1, 0)
    corner.Parent = effect
    
    return effect
end

-- Effekte um den Bildschirm
local topEffect = createLoadEffect(ScreenGui, UDim2.new(1, 0, 0, 5), UDim2.new(0, 0, 0, 0))
local bottomEffect = createLoadEffect(ScreenGui, UDim2.new(1, 0, 0, 5), UDim2.new(0, 0, 1, -5))
local leftEffect = createLoadEffect(ScreenGui, UDim2.new(0, 5, 1, 0), UDim2.new(0, 0, 0, 0))
local rightEffect = createLoadEffect(ScreenGui, UDim2.new(0, 5, 1, 0), UDim2.new(1, -5, 0, 0))

